/* pages/life/lable/index.wxss */

page {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.lable_title {
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  font-size: 40rpx;
  color: #333;
}

.lable_list {
  margin: 20rpx 15rpx;
  display: flex;
  display: -webkit-flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
}

.lable_list_item {
  color: #fff;
  border: 1rpx solid #ccc;
  margin-right: 25rpx;
  margin-bottom: 25rpx;
  line-height: 68rpx;
  padding: 0 20rpx;
  border-radius: 10rpx;
  box-shadow: 0 0 3rpx #fff;
}
