/* pages/life/stastics/index.wxss */

.stastics {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.visit_total_title {
  font-size: 40rpx;
  color: #333;
  text-align: center;
  margin: 15rpx 0;
}

.visit_total {
  font-size: 68rpx;
  color: red;
  text-align: center;
}

.sta_table {
  margin: 0 15rpx;
}

.sta_tr {
  display: flex;
  flex-direction: row;
  margin-bottom: 10rpx;
}

.sta_td {
  font-size: 30rpx;
  flex: 1;
  text-align: center;
  border-bottom: 1rpx solid #ccc;
  line-height: 68rpx;
  color: #666;
}

.sta_th .sta_td {
  color: #333;
}

.sta_tr .sta_td:first-child {
  color: #333;
}

.section_data {
  margin: 30rpx 15rpx;
}

.rect {
  width: 200rpx;
  height: 200rpx;
  line-height: 200rpx;
  border-radius: 50%;
  background-color: pink;
  position: relative;
  margin: 0 auto;
}

.rect::before, .rect::after {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  border-radius: 50%;
  content: '';
  z-index: -1;
  margin: -5%;
  box-shadow: inset 0 0 0 2rpx;
  animation: clipMe 8s linear infinite;
}

.rect::after {
  animation-delay: -4s;
}

@keyframes clipMe {
  0%, 100% {
    clip: rect(0, 220rpx, 2rpx, 0);
  }

  25% {
    clip: rect(0, 2rpx, 220rpx, 0);
  }

  50% {
    clip: rect(218rpx, 220rpx, 220rpx, 0);
  }

  75% {
    clip: rect(0, 220rpx, 220rpx, 218rpx);
  }
}
