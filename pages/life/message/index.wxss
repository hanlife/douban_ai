/* pages/life/message/index.wxss */

page {
  background-color: #f8f8f8;
}

.message {
  margin: 0 15rpx;
  padding-top: 20rpx;
}

.message_list {
  font-size: 28rpx;
  color: #666;
}

.message_item {
  display: flex;
  flex-direction: row;
  margin-bottom: 20rpx;
  background-color: #fff;
  padding: 10rpx;
  border-radius: 10rpx;
  box-shadow: 0 0 0 3rpx #ccc;
}

.item_ava {
  width: 50rpx;
  height: 50rpx;
  font-size: 0;
  border-radius: 50%;
  overflow: hidden;
}

.item_ava>image {
  width: 100%;
  height: 100%;
}

.item_cont {
  flex: 1;
  padding-bottom: 10rpx;
}

.item_titel {
  font-size: 30rpx;
  line-height: 50rpx;
  margin-left: 15rpx;
}

.item_txt {
  font-size: 30rpx;
  margin: 10rpx 0 10rpx 15rpx;
}

.item_time {
  font-size: 26rpx;
  text-align: right;
  margin-right: 20rpx;
}

.foot_btn {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  font-size: 32rpx;
  background-color: #a0d352;
  color: #fff;
}

.write_shadow {
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 98;
  background-color: rgba(0, 0, 0, 0.7);
}

.write_warper {
  position: fixed;
  width: 480rpx;
  min-height: 200rpx;
  background-color: #fff;
  border-radius: 20rpx;
  box-shadow: 0 0 0 5rpx #000;
  padding: 10rpx;
  z-index: 99;
  top: 25%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.write_input {
  margin: 10rpx;
  width: 450rpx;
  min-height: 150rpx;
}

.user_btn {
  color: #fff;
  text-align: center;
  line-height: 88rpx;
}

.write_btn {
  color: #fff;
  text-align: center;
  line-height: 88rpx;
  background-color: #a0d352;
}
