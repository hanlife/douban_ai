/* pages/life/index.wxss */

.home {
}

.home_header {
  position: relative;
  height: 350rpx;
  width: 100%;
  color: #fff;
}

.home_bg {
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  background-color: rgba(0, 0, 0, 0.7);
  z-index: -1;
}

.home_content {
  text-align: center;
}

.home_logo {
  position: absolute;
  bottom: -100rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 240rpx;
  height: 240rpx;
  background-color: #333;
  z-index: 10;
  border-radius: 50%;
}

.home_logo>image {
  width: 200rpx;
}

.home_logo>view {
  font-size: 0;
  margin: 20rpx;
  border-radius: 50%;
  overflow: hidden;
}

.home_warper {
  background-color: #333;
}

.home_title {
  font-size: 40rpx;
  padding-top: 50rpx;
  line-height: 68rpx;
}

.home_title_us {
  font-size: 30rpx;
  line-height: 48rpx;
}

.home_lists{
  padding-top: 150rpx;
}
