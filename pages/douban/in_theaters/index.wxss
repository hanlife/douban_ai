page {
  background-color: #ccc;
}

in_theaters-box {
  overflow: hidden;
}

.in_header {
  background-color: #ccc;
  position: fixed;
  top: 0;
  left: 0;
  width: 750rpx;
  text-align: center;
  z-index: 99;
}

.in_header> view {
  margin: 15rpx 20rpx;
  height: 60rpx;
  line-height: 60rpx;
  background-color: #fff;
  font-size: 28rpx;
  color: #999;
  border-radius: 15rpx;
}

