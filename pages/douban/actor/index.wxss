/* pages/douban/actor/index.wxss */

page {
  background-color: #f8f8f8;
}

.actor_works {
  margin: 25rpx 15rpx 0;
}

.actor_header {
  height: 500rpx;
  width: 750rpx;
  position: relative;
  overflow: hidden;
  font-size: 0;
}

.actor-detail {
  position: absolute;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  z-index: 99;
  background-color: rgba(0, 0, 0, 0.8);
  color: #fff;
  text-align: center;
}

.image_bg {
  position: absolute;
  z-index: 9;
  width: 100%;
}

.actor_img {
  margin: 50rpx auto;
  width: 200rpx;
  height: 200rpx;
  overflow: hidden;
  border-radius: 50%;
}

.actor_img>image {
  width: 100%;
  height: 100%;
}

.actor_name {
  font-size: 28rpx;
  line-height: 50rpx;
  margin-bottom: 10rpx;
}

.actor_name>text {
  display: inline-block;
  padding: 0 15rpx;
  border-radius: 20rpx;
  -moz-box-shadow: 0 0 2px #666;
  -webkit-box-shadow: 0 0 2px #666;
  box-shadow: 0 0 2px #666;
  background-color: #333;
}

.actor_us_name {
  font-size: 26rpx;
  line-height: 50rpx;
}

.actor_pos {
  font-size: 24rpx;
  line-height: 50rpx;
}

.in_item_des {
  margin-top: 10rpx;
  line-height: 40rpx;
}

.in_item_tit {
  text-align: center;
  font-size: 30rpx;
  color: #333;
}

.in_item_roles {
  font-size: 24rpx;
  color: #666;
}
